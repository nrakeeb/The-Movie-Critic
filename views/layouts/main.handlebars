</head>

<body class="body">
    <div class="wrapper">
        <header>
            <h1>
                <a class="btn-no-style" href="/">Home</a>
            </h1>
            <nav>
                {{#if loggedIn}}
                <a class="btn-no-style" href="/dashboard">Dashboard</a>
                <button id="logout" class="btn-no-style logout">Logout</button>
                {{else}}
                <a class="btn-no-style" href="/login">Login</a>
                {{/if}}
            </nav>
        </header>
        <div class="site-row">
            <div class="site-name">
                <h1>Movie Critic</h1>
            </div>
        </div>
        <main>
            {{{ body }}}
        </main>
    </div>

    {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    {{/if}}
</body>

</html>